.stud-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  box-shadow: 0 0 10px #2d8cf0;
  margin-top: 5px;
}

.i-swipeout-demo-item{
  border-bottom:#dddee1 solid 1px;
  box-shadow:rgb(238, 238, 238) 0px 0px 40px inset;
}
.i-cell-padding{
    padding:5px 0px!important;
    font-size:14px;
}
.i-swipeout-demo-title{
    height:30px;
    padding:0 15px;
    line-height:30px;
    margin-top:20px;
    margin-bottom:5px;
}
.i-swipeout-demo-des{
    padding:0 15px;
    margin-bottom:10px;
    font-size:12px;
    color:#ff9900;
}
/*左中右结构*/
.i-swipeout-image{
    float:left;
    width:50px;
    height:50px;
    line-height:50px;
    text-align:center;
    vertical-align: middle;
    border-radius:50%;
    /* background: #2d8cf0; */
}
.i-swipeout-des{
  padding: 8px 0 0 10px;
  margin-left:50px;
}
.i-swipeout-des-detail{
    font-size:12px;
    word-break:break-all;
    color:#80848f;
}
/*自定义按钮*/
.i-swipeout-demo-button-group{
    height:100%;
    width:100%;
}
.i-swipeout-demo-button{
    width:70px;
    float:left;
    display: flex;
    height:100%;
    justify-content: center;
    background:#2d8cf0;
    color:#fff;
    align-items:center;
}