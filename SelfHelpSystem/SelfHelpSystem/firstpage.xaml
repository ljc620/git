<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="SelfHelpSystem.FirstPage" Title="Page1" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      KeyDown="Page_KeyDown">
  <Page.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Page.Resources>
  <Page.Background>
        <ImageBrush ImageSource="pic/bg.jpg" Opacity="10"/>
  </Page.Background>
    <StackPanel Margin="0,0,0,0" Orientation="Vertical" VerticalAlignment="Center">
    <StackPanel Name="dock" Width="604" Height="464" Orientation="Horizontal" VerticalAlignment="Center">
      <StackPanel.Background>
        <ImageBrush ImageSource="pic/bgdp1.png" />
      </StackPanel.Background>
      <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="604">
                <Button Name="btn_GP" Margin="0,110,0,0" Content="购       票" Height="129" Width="458" Style="{StaticResource CommButton}" Click="ButtonGP_Click" />
        <Button Name="btn_QP" Margin="0,0,0,0" Content="取       票" Height="129" Width="458" Style="{StaticResource CommButton}" Click="ButtonQP_Click" Visibility="Hidden" />
                <Button Name="btTest" Content="测试" Click="btTest_Click" Visibility="Hidden"  />
            </StackPanel>
    </StackPanel>
  </StackPanel>
</Page>