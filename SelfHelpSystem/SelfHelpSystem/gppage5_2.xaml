                <TextBlock Text="应付金额：" TextBlock.FontSize="35" TextBlock.Foreground="#FFFFFFFF" />
                <TextBlock Name="ticketTotal" Text="300" TextBlock.FontSize="35" Margin="0,0,0,0" TextBlock.Foreground="Red" />
